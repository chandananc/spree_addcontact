<h1> Add Contact Details </h1>


<%= form_for @contact do |f| %>
 
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :sex %><br>
    <%= f.select :sex, options_for_select(@sexs),class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, class: 'form-control' %>
  </div> 
 
  <div class="form-group">
    <%= f.label :relationship %><br>
    <%= f.text_field :relationship, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :contactimage %>
  </div>
  
 
  <div class="actions">
    <%= f.submit  "Save Contact", class: "btn btn-primary"  %>
  </div>
<% end %>

<%#= link_to 'Back', {:action => 'contact'} %>